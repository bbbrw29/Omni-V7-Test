<script>
const myPatterns = {
    even: { 0:"BBBSSBBB", 1:"SBSSBBBB", 2:"BBBSSSSB", 3:"SBBBBSSB", 4:"BBBBSSBB", 5:"BBBSSSBB", 6:"BBBSSSBB", 7:"SBBSSBBS", 8:"BBBSSBBB", 9:"BBBSSBBB" },
    odd: { 0:"SBBSSBSS", 1:"BBBSSBBS", 2:"BBBBSSSB", 3:"BBBBSSBS", 4:"BBBBSSBS", 5:"BSBBSSBS", 6:"BBBSSBBS", 7:"BBBSSBBB", 8:"BBBSSBBB", 9:"BBBBSSBB" }
};

let rawInputs = JSON.parse(localStorage.getItem('rawInputs')) || [];
let activeTracks = JSON.parse(localStorage.getItem('activeTracks')) || [];
let historyLog = JSON.parse(localStorage.getItem('historyLog')) || [];
let lockedTrackId = localStorage.getItem('lockedTrackId') || null;

// TRACKER COUNTERS
let hitCounter = 0;
let failCounter = 0;

function saveData() {
    localStorage.setItem('rawInputs', JSON.stringify(rawInputs));
    localStorage.setItem('activeTracks', JSON.stringify(activeTracks));
    localStorage.setItem('historyLog', JSON.stringify(historyLog));
    if (lockedTrackId) localStorage.setItem('lockedTrackId', lockedTrackId);
}

function resetData() { if(confirm("Clear all data?")) { localStorage.clear(); location.reload(); } }

function undoInput() {
    if (rawInputs.length === 0) return;
    rawInputs.pop();
    if (activeTracks.length > 0) activeTracks.pop();
    activeTracks.forEach(t => t.results.pop());
    lockedTrackId = activeTracks.length > 0 ? activeTracks[activeTracks.length-1].id : null;
    saveData(); renderUI();
}

function handleInput(num) {
    const bs = num >= 5 ? "B" : "S";
    activeTracks.forEach(t => { 
        if (t.results.length < 8) {
            let target = t.pattern[t.results.length];
            if(t.results.length === 5 && t.results[4] === "‚ùå") {
                target = (t.pattern[5] === "B" ? "S" : "B");
            }
            t.results.push(bs === target ? "‚úÖ" : "‚ùå");

            // --- AI TRACKER LOGIC START ---
            let mode = ""; let status = "";
            if (t.results.length === 5 && t.results[4] === "‚úÖ" && !t.results.slice(0,4).includes("‚úÖ")) {
                mode = "SNIPER"; status = "WIN"; hitCounter++; failCounter = 0;
            } else if (t.results.length === 6 && t.results[5] === "‚úÖ" && t.results[4] === "‚ùå") {
                mode = "REC"; status = "WIN"; hitCounter++; failCounter = 0;
            } else if (t.results.length === 6 && t.results[5] === "‚ùå" && t.results[4] === "‚ùå") {
                mode = "REC"; status = "FAIL"; failCounter++; hitCounter = 0;
            }

            if (mode !== "") {
                const time = new Date().toLocaleTimeString([], { hour12: false });
                const resText = status === 'WIN' ? `HIT (${hitCounter}) ‚úÖ` : `FAIL (${failCounter}) ‚ùå`;
                const row = `<tr>
                    <td style="color:#666;">${time}</td>
                    <td style="color:var(--gold); font-weight:bold;">${t.type[0].toUpperCase()}:${t.digit}</td>
                    <td><span class="badge ${status==='WIN'?(mode==='SNIPER'?'badge-hit':'badge-rec'):'badge-fail'}">${mode}</span></td>
                    <td style="color:${status==='WIN'?'var(--green)':'var(--red)'}; font-weight:bold;">${resText}</td>
                </tr>`;
                document.getElementById('aiTrackerBody').insertAdjacentHTML('afterbegin', row);
                const tbody = document.getElementById('aiTrackerBody');
                if (tbody.children.length > 30) tbody.removeChild(tbody.lastChild);
            }
            // --- AI TRACKER LOGIC END ---
        }
    });

    if (lockedTrackId) {
        let locked = activeTracks.find(t => t.id == lockedTrackId);
        if (locked && (locked.results[locked.results.length-1] === "‚úÖ" || locked.results.length === 8)) lockedTrackId = null;
    }
    if (rawInputs.length > 0) {
        const type = (rawInputs[rawInputs.length-1] % 2 === 0) ? 'even' : 'odd';
        let newT = { id: Date.now()+Math.random(), digit: num, type: type, pattern: myPatterns[type][num], results: [] };
        activeTracks.push(newT);
        if (!lockedTrackId) lockedTrackId = newT.id;
    }
    rawInputs.push(num);
    for (let i = activeTracks.length - 1; i >= 0; i--) {
        if (activeTracks[i].results.length === 8) historyLog.unshift(activeTracks.splice(i, 1)[0]);
    }
    saveData(); renderUI();
}

function renderUI() {
    const locked = activeTracks.find(t => t.id == lockedTrackId);
    const stepIdx = locked ? locked.results.length : -1;
    
    let currentPred = locked ? locked.pattern[stepIdx] : "-";
    if (locked && stepIdx === 5 && locked.results[4] === "‚ùå") {
        currentPred = (locked.pattern[5] === "B" ? "S" : "B");
    }
    document.getElementById('predDisplay').innerText = currentPred;
    document.getElementById('statusLabel').innerText = locked ? `ID:${locked.type[0].toUpperCase()}${locked.digit} | POS:${stepIdx+1}` : "WAITING";
    
    for(let i=0; i<8; i++) {
        let el = document.getElementById(`step-${i}`);
        let res = locked ? locked.results[i] : "";
        el.style.background = res==='‚úÖ'?'var(--green)':(res==='‚ùå'?'var(--red)':'#222');
        el.style.border = (i===stepIdx) ? '1.5px solid var(--gold)' : '1px solid #444';
        el.innerText = res || (i+1);
    }

    document.getElementById('liveMonitor').innerHTML = activeTracks.map(t => {
        const isTriggered = !t.results.includes("‚úÖ") && t.results.length >= 3;
        const sHist = historyLog.filter(h => h.type === t.type && h.digit === t.digit).slice(0, 2);
        
        let msg = "PENDING";
        let css = "status-waiting";
        let displayTarget = t.pattern[t.results.length];
        
        if (t.results.length === 4) { 
            if (!t.results.includes("‚úÖ")) {
                msg = `üî• POS 5: BET ${t.pattern[4]}`;
                css = "status-sniper";
            } else msg = "WATCHING";
        } else if (t.results.length === 5) { 
            if (t.results[4] === "‚ùå") {
                const rev = t.pattern[5] === "B" ? "S" : "B";
                displayTarget = rev;
                msg = `üîÑ REC 6: BET ${rev}`;
                css = "status-recovery";
            } else {
                msg = "POS 5 WIN ‚úÖ";
                css = "status-win";
            }
        }

        return `
        <div class="live-card ${isTriggered ? 'signal-on' : ''}">
            <div class="live-info">
                <span style="color:${isTriggered ? 'var(--red)' : '#888'}">${t.type[0].toUpperCase()}:${t.digit}</span>
                <span style="color:var(--gold); font-weight:900;">${displayTarget || '-'}</span>
            </div>
            <div class="live-dots">${t.pattern.split('').map((p, i) => `<div class="dot-col"><div class="dot" style="background:${t.results[i] === '‚úÖ' ? 'var(--green)' : (t.results[i] === '‚ùå' ? 'var(--red)' : '#222')}"></div></div>`).join('')}</div>
            <div class="ai-advice-box ${css}">${msg}</div>
            <div class="mini-hist">${sHist.map(h => `<div class="mini-hist-row">${h.results.map(r => `<div class="mini-dot" style="background:${r==='‚úÖ'?'var(--green)':'var(--red)'}"></div>`).join('')}</div>`).join('')}</div>
        </div>`;
    }).join('');

    document.getElementById('historyBody').innerHTML = historyLog.slice(0,20).map(h => {
        let aiMode = "NORMAL";
        if (h.results[4] === "‚úÖ" && !h.results.slice(0,4).includes("‚úÖ")) aiMode = "SNIPER HIT";
        else if (h.results[5] === "‚úÖ" && h.results[4] === "‚ùå") aiMode = "REC HIT";
        else if (h.results[4] === "‚ùå" && h.results[5] === "‚ùå") aiMode = "REC FAIL";

        return `
        <tr>
            <td style="color:var(--gold); font-weight:bold;">${h.type[0].toUpperCase()}:${h.digit}</td>
            <td style="letter-spacing:1px; color:#777;">${h.results.join('')}</td>
            <td style="color:${aiMode.includes('REC')?'var(--gold)':(aiMode.includes('SNIPER')?'var(--green)':'#555')}; font-size:8px; font-weight:bold;">${aiMode}</td>
            <td style="color:${h.results.includes('‚úÖ')?'var(--green)':'var(--red)'}; font-weight:bold;">${h.results.includes('‚úÖ')?'WIN':'LOSS'}</td>
        </tr>`}).join('');
}

function openCopyModal() { document.getElementById('copyModal').style.display = 'block'; generateCopy('normal'); }
function generateCopy(mode) {
    let list = [...historyLog];
    if (mode === 'sorted') list.sort((a, b) => a.type !== b.type ? a.type.localeCompare(b.type) : a.digit - b.digit);
    let text = "ID\tRECORD\tMODE\tSTAT\n";
    list.forEach(h => {
        let aiMode = "NORMAL";
        if (h.results[4] === "‚úÖ" && !h.results.slice(0,4).includes("‚úÖ")) aiMode = "SNIPER_HIT";
        else if (h.results[5] === "‚úÖ" && h.results[4] === "‚ùå") aiMode = "REC_HIT";
        else if (h.results[4] === "‚ùå" && h.results[5] === "‚ùå") aiMode = "REC_FAIL";
        text += `${h.type[0].toUpperCase()}:${h.digit}\t${h.results.join('')}\t${aiMode}\t${h.results.includes('‚úÖ')?'W':'L'}\n`;
    });
    document.getElementById('copyArea').value = text;
}
function doClipboardCopy() { document.getElementById('copyArea').select(); document.execCommand('copy'); alert("Copied!"); }
renderUI();
</script>
</body>
</html>
